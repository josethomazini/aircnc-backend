{
  "name": "aircnc-backend",
  "version": "1.0.0",
  "description": "A mod from the RocketSeat tutorial to be a reference for backend projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/josethomazini/aircnc-backend"
  },
  "engines": {
    "node": ">=14.15.3",
    "npm": ">=6.14.9"
  },
  "private": true,
  "scripts": {
    "install-libs": "npm run _clear_package_lock && npm run _clear_modules && npm install",
    "test:coverage": "jest --coverage --collectCoverageFrom=src/**/*.{js,jsx,ts,tsx}",
    "test:unit": "watch, mocks",
    "test:integration": "",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect=0.0.0.0:9229 --exit-child --respawn --ignore-watch node_modules --transpile-only -- src/server.ts | pino-pretty -c",
    "todos-finder": "find-todos",
    "build": "npm-run-all code_ok _clear_dist _transpile",
    "code_ok": "npm-run-all _type-check _lint",
    "start": "NODE_ENV=production node dist/server.js | pino-pretty -c",
    "_clear_modules": "rimraf node_modules || true",
    "_clear_package_lock": "rimraf package-lock.json || true",
    "_clear_dist": "rimraf dist || true",
    "_lint": "eslint src --ext .ts,.js --fix",
    "_type-check": "tsc --noEmit",
    "_transpile": "babel src --ignore=\"*/node_modules\" --copy-files --no-copy-ignored --out-dir dist --extensions \".js,.jsx,.ts,.tsx\""
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.20",
    "@types/mongoose": "^5.10.3",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.20",
    "@types/pino": "^6.3.5",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "find-todos": "^1.0.3",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3",
    "typescript-eslint": "0.0.1-alpha.0"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "eslint-import-resolver-custom-alias": "^1.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.11.9",
    "multer": "^1.4.2",
    "pino": "^6.10.0",
    "pino-pretty": "^4.3.0"
  }
}
